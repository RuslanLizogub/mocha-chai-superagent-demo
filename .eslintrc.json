{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "mocha"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "expect": "readonly",
    "chai": "readonly"
  },
  "rules": {
    "mocha/no-skipped-tests": "warn",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-top-level-hooks": "off",
    "no-console": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "off",
    "semi": ["warn", "never"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "reports/",
    "*.json"
  ]
}
